<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="107dp"
        android:layout_marginTop="24dp"
        android:onClick="previsualisationCSC"
        android:text="OK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="216dp"
        android:layout_height="233dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Picture"
        app:layout_constraintStart_toEndOf="@+id/previous2"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@color/colorPrimary" />

    <ImageButton
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:contentDescription="Button Next"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:srcCompat="@android:drawable/ic_media_next"
        tools:layout_editor_absoluteY="229dp" />

    <ImageButton
        android:id="@+id/previous2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:contentDescription="Button Previous"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_media_previous"
        tools:layout_editor_absoluteY="229dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="162dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="108dp"
        android:layout_marginTop="40dp"
        android:text="Nom PrÃ©nom"
        android:textSize="11pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginStart="91dp"
        android:layout_marginTop="33dp"
        android:text="Choisis un ami"
        android:textSize="14pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>